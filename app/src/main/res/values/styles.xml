<resources>

    <!-- Base application theme. -->

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColor">@color/textGrey</item>
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
        <item name="colorControlNormal">@color/textGrey</item>
    </style>

    <style name="CustomHeaderLight" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColor">@color/textGrey</item>
        <item name="colorControlNormal">@color/textGrey</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
    </style>

</resources>
